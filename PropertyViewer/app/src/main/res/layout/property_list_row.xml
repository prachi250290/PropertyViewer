<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/property_view_padding">

    <ImageView
        android:id="@+id/property_row_image_view"
        android:layout_width="@dimen/property_image_size"
        android:layout_height="@dimen/property_image_size"
        android:layout_margin="@dimen/property_image_margin"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/property_row_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/textview_padding_5"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/property_row_area_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/textview_padding_5"
            android:layout_below="@id/property_row_name_textview"/>

        <TextView
            android:id="@+id/property_row_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:padding="@dimen/textview_padding_5"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>